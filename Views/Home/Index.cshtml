@{
    ViewData["Title"] = "Register";
}

<div class="register-box">
    <h3 class="mb-4">Register form</h3>
    <form>
        <div class="mb-3">
            <input type="email" class="form-control custom-input" placeholder="Email" required />
        </div>
        <div class="row">
            <div class="col-md-6 mb-3">
                <input type="text" class="form-control custom-input" placeholder="First Name" required />
            </div>
            <div class="col-md-6 mb-3">
                <input type="text" class="form-control custom-input" placeholder="Last Name" required />
            </div>
        </div>

        <div class="mb-3">
            <input type="password" class="form-control custom-input" placeholder="Password" required />
        </div>
        <!-- Gender Radio Buttons -->
        <div class="mb-3">
            <label class="form-label d-block mb-2">Gender</label>
            <div class="form-check form-check-inline">
                <input class="form-check-input custom-radio" type="radio" name="gender" id="male" value="Male" required>
                <label class="form-check-label" for="male">Male</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input custom-radio" type="radio" name="gender" id="female" value="Female">
                <label class="form-check-label" for="female">Female</label>
            </div>
        </div>
        <!-- Study Level -->
        <div class="mb-3">
            <label for="studyLevel" class="form-label">Study Level</label>
            <select id="studyLevel" class="form-select custom-input" required>
                <option value="">-- Select Level --</option>
                <option>High School</option>
                <option>Diploma</option>
                <option>Bachelor</option>
                <option>Master</option>
                <option>PhD</option>
            </select>
        </div>
        <!-- City -->
        <div class="mb-3">
            <label for="city" class="form-label">City</label>
            <select id="city" class="form-select custom-input" required>
                <option value="">-- Select City --</option>
                <option>Amman</option>
                <option>Irbid</option>
                <option>Zarqa</option>
                <option>Aqaba</option>
                <option>Madaba</option>
            </select>
        </div>
        <button type="submit" class="btn custom-btn w-100" >SAVE</button>
    </form>
</div>
